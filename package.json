{
  "name": "life-dash",
  "private": true,
  "version": "0.0.1",
  "description": "A personal dashboard application to manage finance, tasks, notes, and projects. (Life Administration Dashboard)",
  "author": "Bradley Laskey",
  "workspaces": [
    "apps/*",
    "modules/*"
  ],
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "bun run --filter='*' lint",
    "lint:fix": "bun run --filter='*' lint:fix",
    "typecheck": "bun run --filter='*' typecheck",
    "test": "bun run --filter='*' test",
    "build": "bun run --filter='*' build",
    "prepare": "husky",
    "infra:up": "docker compose up -d",
    "infra:down": "docker compose down",
    "gen:db": "bunx prisma generate --schema ./modules/dbo/prisma/schema.prisma",
    "migrate:db": "bunx prisma db push --schema modules/dbo/prisma/schema.prisma"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": "prettier --write"
  },
  "dependencies": {},
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/bun": "^1.2.21",
    "@types/eslint": "^9.6.1",
    "dotenv": "^17.2.1",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vitest": "^3.2.4"
  }
}
