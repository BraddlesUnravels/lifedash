# Database Configuration (MariaDB/MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=appdb

# Multiple Database Users for Different Services
# App User - Standard application operations (SELECT, INSERT, UPDATE, DELETE)
APP_DB_USER=app_user
APP_DB_PASSWORD=app_password
APP_DATABASE_URL="mysql://${APP_DB_USER}:${APP_DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_DATABASE}?connect_timeout=60&pool_timeout=60&socket_timeout=60"

# Background Worker User - Data processing, analytics (SELECT, INSERT, UPDATE)
BGW_DB_USER=bgw_user  
BGW_DB_PASSWORD=bgw_password
BGW_DATABASE_URL="mysql://${BGW_DB_USER}:${BGW_DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_DATABASE}?connect_timeout=60&pool_timeout=60&socket_timeout=60"

# Migration User - Schema changes, maintenance (ALL PRIVILEGES)
MIG_DB_USER=mig_user
MIG_DB_PASSWORD=mig_password
MIG_DATABASE_URL="mysql://${MIG_DB_USER}:${MIG_DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_DATABASE}?connect_timeout=60&pool_timeout=60&socket_timeout=60"

# Primary Database URL (used by Prisma CLI for migrations)
DATABASE_URL="${MIG_DATABASE_URL}"

# Environment
NODE_ENV=development